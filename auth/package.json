{
    "name": "auth",
    "type": "module",
    "version": "1.0.0",
    "scripts": {
        "dev": "NODE_ENV=development bun run --hot src/index.ts | pino-pretty",
        "start": "bun run ./dist/index.js",
        "test": "NODE_ENV=test LOG_LEVEL=silent bun vitest",
        "test:unit": "NODE_ENV=test LOG_LEVEL=silent bun vitest run unit",
        "test:int": "NODE_ENV=test LOG_LEVEL=silent bun vitest run int",
        "lint": "eslint",
        "lint:fix": "npm run lint --fix",
        "build": "bun build ./src/index.ts --outdir ./dist --target bun"
    },
    "dependencies": {
        "@libsql/client": "^0.15.15",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.10.7",
        "hono-pino": "^0.10.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "stoker": "^2.0.1",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.4.2",
        "@types/bun": "latest",
        "dotenv-expand": "^12.0.3",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.1",
        "eslint-plugin-format": "^1.0.2",
        "vitest": "^4.0.16"
    }
}
